<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">#9B26AF</item>
        <item name="colorPrimaryDark">#7A1EA1</item>
        <item name="colorAccent">#68EFAD</item>
    </style>


    <!-- Style for a header TextView. -->
    <style name="TitleTextStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">48dp</item>
        <item name="android:gravity">center</item>
        <item name="android:paddingBottom">12dp</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:textSize">28sp</item>
        <item name="android:textColor">#263238</item>
    </style>

    <!-- Style for title body, explanation. -->
    <style name="TitleBodyTextStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:paddingTop">12dp</item>
        <item name="android:paddingBottom">12dp</item>
        <item name="android:textSize">15sp</item>
        <item name="android:textColor">#37474F</item>
    </style>

    <!-- Style for all Question titles in the quiz. -->
    <style name="QuestionTitleTextStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">48dp</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:paddingTop">24dp</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">#78909C</item>
    </style>

    <!-- Style for all Question body textes. -->
    <style name="QuestionBodyTextStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:paddingTop">12dp</item>
        <item name="android:paddingBottom">8dp</item>
        <item name="android:textSize">15sp</item>
        <item name="android:textColor">#37474F</item>
    </style>

    <!-- Style for all Radio buttons. -->
    <style name="RadioAnswer">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:checked">false</item>
        <item name="android:paddingLeft">12dp</item>
        <item name="android:textSize">15sp</item>
        <item name="android:textColor">#37474F</item>
    </style>

    <!-- Division lines style. -->
    <style name="DivisionLine">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">2dp</item>
        <item name="android:layout_marginTop">20dp</item>
        <item name="android:background">#68EFAD</item>
    </style>

    <!-- Submit button style. -->
    <style name="SubmitButtonStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">center</item>
        <item name="android:background">#68EFAD</item>
        <item name="android:layout_marginTop">32dp</item>
        <item name="android:textSize">15sp</item>
    </style>

</resources>
